<div class='row'>
  <div class='col-md-12'>
    <h2>Categories</h2>
    <hr />
    {{! <p>TODO: render a list of all category id's and categories here</p> }}
    <table class='table table-dark table-striped-columns'>
      {{#each data}}
        <tr>
          <td>{{id}}</td>
          <td>{{category}}</td>
        </tr>
      {{else}}
        <div class='col-md-12 text-center'>
          <strong>{{message}}</strong>
        </div>
      {{/each}}
    </table>
  </div>
</div>