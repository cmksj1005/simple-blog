<div class='row'>
  <div class='col-md-12'>
    <h2>Categories
      <a href='/categories/add' class='btn btn-success pull-right'>Add Category</a>
    </h2>
    <hr />
    {{! <p>TODO: render a list of all category id's and categories here</p> }}
    <table class='table table-dark table-striped-columns'>
      <tr>
        <th>Category ID</th>
        <th>Category Name</th>
        <th></th>
      </tr>
      {{#each data}}
        <tr>
          <td><a href='/posts?category={{id}}'>{{id}}</a></td>
          <td><a href='/posts?category={{id}}'>{{category}}</a></td>
          <td><a
              href='/categories/delete/{{id}}'
              class='btn btn-danger'
            >remove</a></td>
        </tr>
      {{else}}
        <tr>
          <td colspan='5' class='text-center'>
            <strong>{{message}}</strong>
          </td>
        </tr>
      {{/each}}
    </table>
  </div>
</div>