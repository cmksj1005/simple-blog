<div class='row'>
  <div class='col-md-12'>
    <h2>
      <a href='/posts/add' class='btn btn-success pull-right'>Add Post</a></h2>
    <hr />
    <!--<p>TODO: render a list of all post title values here</p>-->
    <table class='table table-dark table-striped-columns'>
      <tr>
        <th>Post ID</th>
        <th>Title</th>
        <th>Post Date</th>
        <th>Category</th>
        <th>Published</th>
        <th></th>
      </tr>
      {{#each data}}
        <tr>
          <td>{{id}}</td>
          <td>{{title}}</td>
          <td>{{postDate}}</td>
          <td><a href='/posts?category={{category}}'>{{category}}</a></td>
          <td>{{published}}</td>
          <td><a
              href='/posts/delete/{{PostId}}'
              class='btn btn-danger'
            >remove</a>
          </td>
        </tr>
      {{else}}
        <tr>
          <td colspan='5' class='text-center'>
            <strong>{{message}}</strong>
          </td>
        </tr>
      {{/each}}
    </table>
  </div>
</div>