<div class='row'>
  <div class='col-md-12'>
    <h2>Posts</h2>
    <hr />
    <!--<p>TODO: render a list of all post title values here</p>-->
    <table class='table table-dark table-striped-columns'>
      <tr>
        <th>Post ID</th>
        <th>Title</th>
        <th>Post Date</th>
        <th>Category</th>
        <th>Published</th>
      </tr>
      {{#each data}}
        <tr>
          <td>{{id}}</td>
          <td>{{title}}</td>
          <td>{{postDate}}</td>
          <td><a href='/posts?category={{category}}'>{{category}}</a></td>
          <td>{{published}}</td>
        </tr>
      {{else}}
        <div class='col-md-12 text-center'>
          <strong>{{message}}</strong>
        </div>
      {{/each}}
    </table>

  </div>
</div>